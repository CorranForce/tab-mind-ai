{
  "manifest_version": 3,
  "name": "SmartTab AI",
  "version": "1.0.0",
  "description": "AI-powered tab organization that surfaces the tabs you need, when you need them",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "host_permissions": [
    "https://wjmkijvckvnrrsjzgwge.supabase.co/*"
  ],
  "action": {
    "default_title": "SmartTab AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
